<div class="user-details">
<h2>{{foundUser.username}}</h2>
  <picture><img src="{{foundUser.image}}" alt="{{foundUser.username}}"></picture>
  <p>Email: {{foundUser.email}}</p>
  <p>Phone Number: {{foundUser.phoneNumber}}</p>
  <p>Member since: {{foundUser.createdAt}}</p>
</div>

<div class="user-pets">
  {{#each foundPet}}

    <div class="card">
      <picture>
        <img src="{{this.image}}" alt="{{this.name}}" />
      </picture>
      <div class="card-content">
        <div>
        <p>{{this.name}}</p>
        <p>Age: {{this.age}}</p>
        <p>Sex: {{this.sex}}</p>
        <p><a href="/pets/{{this.id}}">More</a></p>
      </div>
      </div>
    </div>

  {{/each}}
</div>