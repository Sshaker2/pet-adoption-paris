<form action="/pets/{{editPet.id}}/edit" method="post" enctype="application/x-www-form-urlencoded">
  <div>
    <label for="name">Name : </label>
    <input value="{{editPet.name}}" type="text" id="name" name="name" />
  </div>
  <div>
    <label for="image">Image : </label>
    <input value="{{editPet.image}}" type="text" id="image" name="image" />
  </div>
  <div>
    <label for="petType">Pet Type : </label>
    <select name="petType" id="petType">
      <option value="-1" disabled>Select</option>
      <option value="cat">Cat</option>
      <option value="dog">Dog</option>
    </select>
  </div>
  <div>
    <label for="sex">Sex : </label>
    <select name="sex" id="sex">
      <option value="-1" disabled>Select</option>
      <option value="male">Male</option>
      <option value="female">Female</option>
    </select>
  </div>
  <div>
    <label for="age">Age : </label>
    <input value="{{editPet.age}}" type="number" id="age" name="age" />
  </div>
  <div>
    <label for="breed">Breed : </label>
    <input value="{{editPet.breed}}" type="text" id="breed" name="breed" />
  </div>
  <div>
    <label for="vaccinated">Vaccinated : </label>
    <select name="vaccinated" id="vaccinated">
      <option value="-1" selected disabled>Select</option>
      <option value="yes">Yes</option>
      <option value="no">No</option>
    </select>
  </div>
  <div>
    <label for="neutered">Neutered : </label>
    <select name="neutered" id="neutered">
      <option value="-1" selected disabled>Select</option>
      <option value="yes">Yes</option>
      <option value="no">No</option>
    </select>
  </div>
  <div>
    <label for="chipped">Chipped : </label>
    <select name="chipped" id="chipped">
      <option value="-1" selected disabled>Select</option>
      <option value="yes">Yes</option>
      <option value="no">No</option>
    </select>
  </div>
  <div>
    <label for="description">Description : </label>
    <input value="{{editPet.description}}" type="text" id="description" name="description" />
  </div>
  <button>Update</button>

</form> 