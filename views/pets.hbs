<h2>ALL PETS READY FOR ADOPTION</h2>
<div class="all-pets">
  {{#each allPets}}

    <div class="card">
      
      <picture>
        <img src="{{this.image}}" alt="{{this.name}}" />
        {{#if ../currentUser}}
          <div 
            {{#if this.faved}}
            class="favorite-container heart-full"
            {{else}}
            class="favorite-container heart-empty"
            {{/if}}
            data-id={{this.id}}>
          </div>
        {{/if}}
      </picture>

      <div class="card-content">
        <p class="name">{{this.name}}</p>
        <p class="description">Age: {{this.age}}  Sex: {{this.sex}}</p>
        <a href="/pets/{{this.id}}">More</a>
      </div>
    </div>

  {{/each}}
</div>