
<section class="add-pet-section">
  <form action="/pets/add" class="add-pet-form" method="post" enctype="multipart/form-data">
  <h2>Add a Pet</h2>
    <div>
      <label for="name">Name: </label>
      <input type="text" id="name" name="name" placeholder="Enter pet's name" />
    </div>
    <div>
      <label for="picture">Image: </label>
      {{! <input type="text" id="image" name="image" /> }}
        <input type="file" name="picture" id="actual-btn" />
        {{! <label for="actual-btn">Choose File</label>
        <span id="file-chosen">No file chosen</span> }}
    </div>
    <div>
      <label for="petType">Pet Type: </label>
      <select name="petType" id="petType">
        <option value="-1" selected disabled>Select</option>
        <option value="cat">Cat</option>
        <option value="dog">Dog</option>
      </select>
    </div>
    <div>
      <label for="sex">Sex: </label>
      <select name="sex" id="sex">
        <option value="-1" selected disabled>Select</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>
    <div>
      <label for="age">Age: </label>
      <input type="number" min="0" id="age" name="age" placeholder="Enter pet's age"  />
    </div>
    <div>
      <label for="breed">Breed: </label>
      <input type="text" id="breed" name="breed" placeholder="Enter pet's breed" />
    </div>
    <div>
      <label for="vaccinated">Vaccinated: </label>
      <select name="vaccinated" id="vaccinated">
        <option value="-1" selected disabled>Select</option>
        <option value="yes">Yes</option>
        <option value="no">No</option>
      </select>
    </div>
    <div>
      <label for="neutered">Neutered: </label>
      <select name="neutered" id="neutered">
        <option value="-1" selected disabled>Select</option>
        <option value="yes">Yes</option>
        <option value="no">No</option>
      </select>
    </div>
    <div>
      <label for="chipped">Chipped: </label>
      <select name="chipped" id="chipped">
        <option value="-1" selected disabled>Select</option>
        <option value="yes">Yes</option>
        <option value="no">No</option>
      </select>
    </div>
    <div>
      <label for="description">Description: </label>
      <input type="text" id="description" name="description" placeholder="Enter pet description"/>
    </div>
    <button>Add</button>
        {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</section>

